<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_transaction"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal"
    android:elevation="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:background="@color/background_rv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="2"
      android:orientation="vertical"
      android:paddingStart="30dp"
      android:paddingEnd="2dp"
      android:gravity="start">
      <TextView
          android:id="@+id/home_category"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:textSize="24sp"
          android:text="1"/>
      <TextView
          android:id="@+id/home_date"
          android:paddingLeft="23dp"
          android:textColor="@color/date"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="2"/>
      <TextView
          android:id="@+id/home_note"
          android:layout_width="match_parent"
          android:layout_height="30dp"
          android:layout_marginTop="5dp"
          android:textSize="15sp"
          android:singleLine="false"
          android:maxLines="2"
          android:textColor="@color/category"
          android:text="1"/>
  </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center">

        <TextView
            android:id="@+id/home_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/amount"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>

